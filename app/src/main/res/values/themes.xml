<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyGovCare" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Light theme colors -->
        <item name="colorPrimary">?attr/brandColor</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Force status and navigation bars to match the brand color -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Control icon visibility in status bar (white icons) -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Remove side margins from Navigation Drawer items and style selection -->
        <item name="navigationViewStyle">@style/Widget.MyGovCare.NavigationView</item>
    </style>

    <style name="Widget.MyGovCare.NavigationView" parent="Widget.Material3.NavigationView">
        <!-- Removes the horizontal margin/padding of the items -->
        <item name="itemShapeInsetStart">0dp</item>
        <item name="itemShapeInsetEnd">0dp</item>
        <!-- Apply semi-transparent brand blue to the background of selected item -->
        <item name="itemBackground">@drawable/nav_item_background</item>
        <!-- Apply brand blue to the icons and text of selected item -->
        <item name="itemIconTint">@color/nav_item_color_state</item>
        <item name="itemTextColor">@color/nav_item_color_state</item>
    </style>

    <style name="Theme.MyGovCare" parent="Base.Theme.MyGovCare">
        <item name="brandColor">@color/brand_blue</item>
        <item name="brandColorAlpha20">@color/brand_blue_alpha_20</item>
        <item name="infoWindowBackground">@color/info_window_background_blue</item>
        <item name="infoWindowStrokeColor">@color/info_window_stroke_blue</item>
    </style>

    <style name="Theme.MyGovCare.Blue" parent="Base.Theme.MyGovCare">
        <item name="brandColor">@color/brand_blue</item>
        <item name="brandColorAlpha20">@color/brand_blue_alpha_20</item>
        <item name="infoWindowBackground">@color/info_window_background_blue</item>
        <item name="infoWindowStrokeColor">@color/info_window_stroke_blue</item>
    </style>

    <style name="Theme.MyGovCare.Orange" parent="Base.Theme.MyGovCare">
        <item name="brandColor">@color/brand_orange</item>
        <item name="brandColorAlpha20">@color/brand_orange_alpha_20</item>
        <item name="infoWindowBackground">@color/info_window_background_orange</item>
        <item name="infoWindowStrokeColor">@color/info_window_stroke_orange</item>
    </style>

    <style name="Theme.MyGovCare.Green" parent="Base.Theme.MyGovCare">
        <item name="brandColor">@color/brand_green</item>
        <item name="brandColorAlpha20">@color/brand_green_alpha_20</item>
        <item name="infoWindowBackground">@color/info_window_background_green</item>
        <item name="infoWindowStrokeColor">@color/info_window_stroke_green</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

</resources>