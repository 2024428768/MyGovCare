<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyGovCare" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Light theme colors -->
        <item name="colorPrimary">@color/brand_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Force status and navigation bars to match the brand color -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Control icon visibility in status bar (white icons) -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.MyGovCare" parent="Base.Theme.MyGovCare" />
</resources>